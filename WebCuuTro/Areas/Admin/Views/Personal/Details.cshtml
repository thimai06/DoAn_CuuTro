@model Models.EF.Pesonal

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <div style="display:flex;">
        <i class="fa fa-user" style="font-size:30px; margin-top:20px;margin-left:10px"> </i>
        <h3>&nbsp;Chi tiết</h3>
    </div>
}
@using (Html.BeginForm("Details", "Personal", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    CHI TIẾT SẢN PHẨM   <b class="text-danger">@Model.Personal_name</b>
                </div>
                <div style="padding:20px 7px 50px 20px; ">
                    <div class="table-responsive">
                        <table class="table  table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center text-primary yellow-bg-prd">Tên đăng nhập</th>
                                    <th class="text-center text-primary yellow-bg-prd">Tên ND</th>
                                    <th class="text-center text-primary yellow-bg-prd">Mật khẩu</th>
                                    <th class="text-center text-primary yellow-bg-prd">CMND</th>
                                    <th class="text-center text-primary yellow-bg-prd">Địa chỉ</th>
                                    <th class="text-center text-primary yellow-bg-prd">Giới tính</th>
                                    <th class="text-center text-primary yellow-bg-prd">SĐT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr id="row_@Model.ID_type">
                                    <td align="center">@Model.ID_user</td>
                                    <td>@Model.Personal_name</td>
                                    <td align="center">@Model.password </td>
                                    <td align="center">@Model.ID_card </td>
                                    <td align="center">@Model.Address </td>
                                    <td align="center">@Model.Gender </td>
                                    <td align="center">@Model.Phone </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="@Url.Action("Index")" class="btn btn-danger">Về danh sách</a>
                                <a href="/Admin/Personal/Edit/@Model.ID_user" class="btn btn-primary">Update</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}