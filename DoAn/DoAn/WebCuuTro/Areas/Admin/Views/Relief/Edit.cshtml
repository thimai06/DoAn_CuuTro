                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.map, new { htmlAttributes = new { @class = "form-control" }, id = "txt" })
                            @Html.ValidationMessageFor(model => model.map, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" control-label col-md-2"> Trạng thái  </label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.status, new { htmlAttributes = new { @class = "form-control" }, id = "txt" })
                            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
