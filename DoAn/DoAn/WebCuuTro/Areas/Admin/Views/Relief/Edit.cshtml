                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.End_date, new { htmlAttributes = new { @class = "form-control" }, id = "txt" })
                            @Html.ValidationMessageFor(model => model.End_date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
