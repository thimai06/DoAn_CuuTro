                    </div>

                    <div class="form-group">
                        <label class=" control-label col-md-2"> Thời gian gửi  </label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Time_sent_post, new { @class = "form-control", @readonly = "true" })
                            @Html.ValidationMessageFor(model => model.Time_sent_post, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" control-label col-md-2"> Nội dung </label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Content, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div>
                        @Html.HiddenFor(model => model.Content_thank, new { @class = "form-control", id = "txt" })

                    </div>
                    <div class="form-group">
                        <label class=" control-label col-md-2"> Tiêu đề  </label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" }, id = "txt" })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" control-label col-md-2"> Mô tả  </label>
