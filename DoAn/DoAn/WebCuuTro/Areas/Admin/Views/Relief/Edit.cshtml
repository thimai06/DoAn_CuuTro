                NHẬP VÀO THÔNG TIN ĐỂ CHỈNH SỬA
            </div>
            <div style="padding:20px 7px 50px 20px; ">
                @using (Html.BeginForm("Edit", "Relief", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class=" control-label col-md-2"> Mã đợt cứu trợ  </label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.ID_relieft, new { @class = "form-control", @readonly = "true" })
                            @Html.ValidationMessageFor(model => model.ID_relieft, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class=" control-label col-md-2"> Loại cứu trợ  </label>
                        <div class="col-md-10">
