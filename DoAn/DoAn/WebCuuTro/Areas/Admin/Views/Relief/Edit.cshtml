                        </div>
                    </div>
                    <
                </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="@Url.Action("Index")" class="btn btn-danger">Back to List</a>
                            <input type="submit" value="Update" class="btn btn-success" />
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>
